this.fn_getFirstDay = function(){
// To. 오늘 날짜
	var objDate = new Date();
	var sDate = objDate.getFullYear().toString();
	sDate += (objDate.getMonth()+1).toString().padLeft(2, "0");
	sDate += "01";
	
	return sDate;
}

// To. 오늘 날짜
this.fn_getToday = function(){
	var objDate = new Date();
	var sDate = objDate.getFullYear().toString();
	sDate += (objDate.getMonth()+1).toString().padLeft(2, "0");
	sDate += objDate.getDate().toString().padLeft(2, "0");
	
	return sDate;
}
